<?xml version="1.0" encoding="UTF-8"?>
<schema
        xmlns="http://www.concrete5.org/doctrine-xml/0.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
    <table name="btCommunityStoreProductFilter">
        <field name="bID" type="integer" size="10">
            <unsigned />
            <key />
        </field>
        <field name="filterSource" type="string" size="10"></field>
        <field name="gID" type="integer"><unsigned/></field>
        <field name="filter" type="string" size="30"></field>
        <field name="filterCID" type="integer"><unsigned/></field>
        <field name="relatedPID" type="integer"><unsigned/></field>
        <field name="groupMatchAny" type="boolean"></field>
        <field name="showOutOfStock" type="boolean"></field>
        <field name="showFeatured" type="boolean"></field>
        <field name="showSale" type="boolean"></field>
        <field name="attributeSource" type="string" size="10"></field>
        <field name="updateType" type="string" size="10"></field>
        <field name="displayClear" type="boolean"></field>
        <field name="filterButtonText" type="string" size="255"></field>
        <field name="clearButtonText" type="string" size="255"></field>
        <field name="showTotals" type="boolean"></field>
        <field name="jumpAnchor" type="boolean"></field>
        <field name="filterManufacturer" type="integer" size="2"></field>

    </table>

    <table name="btCommunityStoreProductFilterGroups">
        <field name="bID" type="integer" size="10"><unsigned /><key /></field>
        <field name="gID" type="integer" size="10"><unsigned/><key /></field>
    </table>

    <table name="btCommunityStoreProductFilterAttributes">
        <field name="bID" type="integer" size="10"><unsigned /><key /></field>
        <field name="akID" type="integer" size="10"><unsigned /><key /></field>
        <field name="type" type="string" size="30"></field>
        <field name="order" type="integer" size="10"><unsigned/></field>
        <field name="matchingType" type="string" size="30"></field>
        <field name="invalidHiding" type="string" size="30"></field>
        <field name="label" type="string" size="255"></field>
    </table>
</schema>
